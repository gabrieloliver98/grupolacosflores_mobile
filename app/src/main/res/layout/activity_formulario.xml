<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app"
    android:layout_margin="8dp"
    tools:ignore="MissingConstraints">


    <TextView
        android:text="@string/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edNome"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/txtNome"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtNome"
        app:layout_constraintVertical_bias="0.65999997"
        tools:layout_editor_absoluteX="14dp" />

    <TextView
        android:text="@string/n_mero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/edNum"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@+id/txtNum"
        app:layout_constraintBottom_toBottomOf="@+id/txtNum"
        app:layout_constraintVertical_bias="0.66"
        tools:layout_editor_absoluteX="14dp" />

    <EditText
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:inputType="phone"
        android:ems="10"
        android:layout_margin="8dp"
        android:id="@+id/txtNum"
        android:hint="@string/informe_o_n_mero"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="203dp"
        android:padding="8dp" />

    <EditText
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteY="143dp"
        tools:layout_editor_absoluteX="143dp"
        android:id="@+id/txtNome"
        android:hint="@string/informe_seu_nome" />

    <Button
        android:text="@string/enviar"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:id="@+id/btnEnvia"
        app:layout_constraintTop_toTopOf="@+id/btnLimpar"
        app:layout_constraintBottom_toBottomOf="@+id/btnLimpar"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@color/colorPrimary" />

    <Button
        android:text="@string/limpar"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:id="@+id/btnLimpar"
        tools:layout_editor_absoluteY="376dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="@string/cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edCliente"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="33sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent" />


</android.support.constraint.ConstraintLayout>