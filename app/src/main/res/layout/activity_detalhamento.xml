<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app"
    tools:ignore="MissingConstraints">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteY="24dp"
        tools:layout_editor_absoluteX="115dp" />

    <TextView
        android:text="Detalhe do Pedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitulo"
        android:textSize="36sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        tools:ignore="HardcodedText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.4" />

    <TextView
        android:text="Preço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="395dp"
        tools:layout_editor_absoluteX="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txtPreco"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="318dp"
        tools:layout_editor_absoluteX="9dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txtNOme"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Código"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="250dp"
        tools:layout_editor_absoluteX="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txtCod"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtCodigo"
        android:hint="Codigo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/txtCod" />

    <EditText
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtNome"
        android:hint="Nome"
        tools:ignore="HardcodedText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/edtCodigo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txtNOme" />

    <EditText
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtPreco"
        android:hint="Preço"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txtPreco"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/edtNome" />

    <Button
        android:text="Encerrar"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEncerrar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPreco"
        tools:ignore="HardcodedText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.43"
        android:background="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>

